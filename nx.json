{
    "pluginsConfig": {
        "@nx/js": {
            "projectsAffectedByDependencyUpdates": "auto"
        }
    },
    "extends": "nx/presets/npm.json",
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "default": ["sharedGlobals"],
        "prod": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).ts",
            "!{projectRoot}/**/*_test.go"
        ],
        "sharedGlobals": [
            "{workspaceRoot}/.github/workflows/ci.yml",
            "{workspaceRoot}/go.work",
            "{projectRoot}/**/*",
            "{workspaceRoot}/.gitignore",
            "{projectRoot}/**/*.ts"
        ]
    },
    "workspaceLayout": {
        "appsDir": "lambdas",
        "libsDir": "libs"
    },
    "defaultBase": "origin/main",
    "targetDefaults": {
        "build": {
            "cache": true,
            "dependsOn": ["lint", "test", "pre-build"],
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/functions/**/function.zip",
                "{projectRoot}/functions/**/bootstrap"
            ],
            "configurations": {
                "prod": {
                    "args": ["STAGE=prod"]
                },
                "dev": {
                    "args": ["STAGE=dev"]
                }
            }
        },
        "test": {
            "cache": true,
            "options": {
                "args": ["--passWithNoTests"]
            }
        },
        "lint": {
            "cache": true
        },
        "deploy": {
            "cache": false,
            "dependsOn": ["^build", "build"],
            "configurations": {
                "prod": {
                    "args": ["STAGE=prod"]
                },
                "dev": {
                    "args": ["STAGE=dev"]
                }
            }
        }
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            }
        },
        "@nx-go/nx-go"
    ],
    "tasksRunnerOptions": {
        "default": {
            "runner": "@pellegrims/nx-remotecache-s3",
            "options": {
                "cacheableOperations": ["build", "test", "lint", "e2e"],
                "bucket": "zenhalab-artifacts-dev",
                "name": "zenhalab-artifacts-dev",
                "prefix": "cache/nx/microservices/",
                "region": "us-east-1",
                "forcePathStyle": true,
                "readOnly": false
            }
        },
        "prod": {
            "runner": "@pellegrims/nx-remotecache-s3",
            "options": {
                "cacheableOperations": ["build", "test", "lint", "e2e"],
                "bucket": "zenhalab-artifacts-prod",
                "name": "zenhalab-artifacts-prod",
                "prefix": "cache/nx/microservices/",
                "region": "us-east-1",
                "forcePathStyle": true,
                "readOnly": false
            }
        }
    }
}
